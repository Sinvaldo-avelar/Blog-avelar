{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es6", // Define o padrão ECMAScript para o código gerado
    "module": "commonjs", // Define o módulo para CommonJS
    "strict": true, // Habilita todas as verificações de tipo estritas
    "esModuleInterop": true, // Habilita interoperabilidade entre CommonJS e ES Modules
    "skipLibCheck": true, // Ignora verificação de tipo em arquivos de declaração
    "forceConsistentCasingInFileNames": true, // Força o uso consistente de maiúsculas/minúsculas nos nomes de arquivos
    "baseUrl": ".", // Define a base para resolução de módulos
    "paths": {
      "@/*": [
        "src/*"
      ] // Mapeia '@' para o diretório 'src'
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ], // Inclui todos os arquivos .ts e .tsx no diretório src
  "exclude": [
    "node_modules"
  ] // Exclui o diretório node_modules
}
